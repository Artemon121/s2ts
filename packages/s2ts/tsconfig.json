{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "plugins": [],
    "paths": {
      "@/*": ["./*"]
    },
  },
  "include": ["./src", "./tests"],
}